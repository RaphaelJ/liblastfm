name: liblastfm
version: 0.0.3.8
synopsis: Wrapper to Lastfm API
license: MIT
license-file: LICENSE
author: Matvey Aksenov, Dmitry Malikov
maintainer: Matvey Aksenov <matvey.aksenov@gmail.com>
category: Network APIs
description: Simple but complete interface to Lastfm API. Can send some stuff and receive reponses from Lastfm. JSON/XML parsing is an exercise for the user.
cabal-version: >= 1.9.2
build-type: Simple

library
  build-depends: base >= 3 && < 5,
                 template-haskell >= 2.4 && < 2.9,
                 bytestring >= 0.9 && < 0.11,
                 containers,
                 text,
                 lens,
                 data-default,
                 http-conduit,
                 mtl == 2.*,
                 curl >= 1.3.7,
                 pureMD5 == 2.1.*,
                 urlencoded >= 0.3 && < 0.5,
                 attoparsec >= 0.10,
                 aeson == 0.6.*,
                 xml == 1.3.12,
                 utf8-string == 0.3.*
  hs-source-dirs: src
  exposed-modules: Network.Lastfm
                   Network.Lastfm.Album
  other-modules:   Network.Lastfm.Request
                   Network.Lastfm.Response
  ghc-options: -Wall
               -fno-warn-unused-do-bind
  include-dirs: docs


test-suite json-no-authentication
  build-depends: base >= 3 && < 5,
                 bytestring >= 0.9 && < 0.11,
                 attoparsec >= 0.10,
                 aeson == 0.6.*,
                 HUnit >= 1.2.4,
                 text,
                 liblastfm
  type: exitcode-stdio-1.0
  main-is: json.hs
  hs-source-dirs: tests
  ghc-options: -Wall
               -fno-warn-unused-do-bind
               -fno-warn-orphans


source-repository head
  type:     git
  location: https://github.com/supki/haskell-liblastfm
